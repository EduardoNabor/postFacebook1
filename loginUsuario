    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        if (!appId.getText().isEmpty()) {
            if (!appSecret.getText().isEmpty()) {
                if (!accesToken.getText().isEmpty()) {
                    (new Interfaz(appId.getText(), appSecret.getText(), accesToken.getText())).setVisible(true);
                } else {
                    JOptionPane.showMessageDialog(null, "Corrija sus datos", null, JOptionPane.ERROR_MESSAGE);
                }
            } else {
                JOptionPane.showMessageDialog(null, "Corrija sus datos", null, JOptionPane.ERROR_MESSAGE);

            }
        } else {
            JOptionPane.showMessageDialog(null, "Corrija sus datos", null, JOptionPane.ERROR_MESSAGE);

        }
    }                                        

